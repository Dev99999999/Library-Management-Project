<%- include("layouts/layout", { title: "Admin Panel" }) %>

<h2>Admin - Manage Books</h2>

<h3>Add New Book</h3>
<form action="/api/book" method="POST" enctype="multipart/form-data">
  <input type="text" name="title" placeholder="Book Title" required><br>
  <input type="text" name="author" placeholder="Author" required><br>
  <input type="text" name="category" placeholder="Category"><br>
  <input type="number" name="availableCopies" placeholder="Available Copies" value="1"><br>
  <input type="file" name="bookFile" required><br>
  <button type="submit">Add Book</button>
</form>

<h3>All Books</h3>
<ul>
  <% books.forEach(book => { %>
    <li>
      <%= book.title %> - <%= book.author %>
      <form action="/api/book/<%= book._id %>?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% }) %>
</ul>
